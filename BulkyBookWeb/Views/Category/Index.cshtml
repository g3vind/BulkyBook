@model List<CategoryModel>

@{
    ViewData["Title"]="Catgory";
}
@if (TempData["success"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["success"]
    </div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["success"]
    </div>
}

<div class="container">
    <div class="row pt-4 pb-2">
       <div class="col-6">
           <h2 class="text-primary">Category List</h2>
       </div>
       <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>
                Create New Category
            </a>
       </div>
    </div>
</div>


<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr class="text-center">
            <th>Display Order</th>
            <th>Category Name</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr class="text-center">
                <td>@obj.DisplayOrder</td>
                <td>@obj.Name</td>
                <td>@obj.CreatedAt</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary btn-sm mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm mx-2">
                            <i class="bi bi-trash"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>